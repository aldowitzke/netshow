<div class="container text-center">
  <h1>My videos</h1>

  <% if @videos.present? %>
    <div class="cards mt-5">
      <% @videos.each do |video| %>
        <%= link_to video_path(video) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://picsum.photos/id/<%= rand(1..500) %>/500)">
            <%= video.name %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="mt-5">
      <p>You have no videos yet</p>
      <%= link_to  "Create one!", new_video_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>