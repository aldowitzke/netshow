<div class="container text-center">
  <div class="mt-5">
    <% if current_user == @video.user %>
      <%= link_to  "Edit video", edit_video_path(@video), class: "btn btn-primary mb-5" %>
      <%= link_to  "Delete video", video_path(@video), method: :delete, class: "btn btn-danger mb-5" %>
    <% end %>
  </div>

  <h1><%= @video.name %></h1>

  <video id=video width=auto height=540 class="video-js vjs-default-skin" style="width: 100%;" controls>
    <source
      src=<%= @video.url %>
      type="application/x-mpegURL">
  </video>

  <script src="video.js"></script>
  <script src="videojs.hls.min.js"></script>
  <script>
  var player = videojs('video');
  player.play();
  </script>
</div>