<div class="container text-center">
  <% if user_signed_in? %>
    <%= link_to  "Create video", new_video_path, class: "btn btn-flat mb-5" %>
  <% else %>
    <%= link_to  "Login",  new_user_session_path, class: "btn btn-flat" %>
    <%= link_to "Sign up", new_user_registration_path, class: "btn btn-gradient" %>
  <% end %>

  <% if @videos %>
    <div class="cards">
      <% @videos.each do |video| %>
        <%= link_to video_path(video) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://picsum.photos/id/<%= rand(1..500) %>/500)">
            <%= video.name %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p>There are no videos yet</p>
  <% end %>
</div>
